# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# Python files (for infrastructure scripts)
[*.py]
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 2

# Ansible files
[*.{ansible,j2}]
indent_size = 2
